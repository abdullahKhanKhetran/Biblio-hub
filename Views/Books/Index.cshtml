@model IEnumerable<Library_Management_System.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Library Books</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">Add New Book</a>
        }
    </div>

    <!-- Search and Filter Form -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="form-control" placeholder="Search by title, author, or ISBN..." />
            </div>
            <div class="col-md-3">
                <select name="genre" class="form-control">
                    <option value="">All Genres</option>
                    @foreach (var genre in ViewBag.Genres)
                    {
                        <option value="@genre" selected="@(genre == ViewData["CurrentGenre"])">@genre</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select name="sortOrder" class="form-control">
                    <option value="">Sort by Title (A-Z)</option>
                    <option value="title_desc">Sort by Title (Z-A)</option>
                    <option value="author">Sort by Author (A-Z)</option>
                    <option value="author_desc">Sort by Author (Z-A)</option>
                    <option value="year">Sort by Year (Old-New)</option>
                    <option value="year_desc">Sort by Year (New-Old)</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Apply</button>
            </div>
        </div>
    </form>

    <!-- Books Table -->
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Genre</th>
                        <th>Year</th>
                        <th>Available</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Genre</td>
                            <td>@book.PublicationYear</td>
                            <td>
                                <span class="badge @(book.AvailableQuantity > 0 ? "bg-success" : "bg-danger")">
                                    @book.AvailableQuantity / @book.Quantity
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info">Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No books found</h4>
            <p>Try adjusting your search or filter criteria.</p>
        </div>
    }
</div>