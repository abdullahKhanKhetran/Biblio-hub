@model IEnumerable<Library_Management_System.Models.BookRequest>
@{
    ViewData["Title"] = "My Book Requests";
}

<div class="container mt-4">
    <h1>My Book Requests</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Request Date</th>
                        <th>Book</th>
                        <th>Author</th>
                        <th>Status</th>
                        <th>Due Date</th>
                        <th>Return Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.RequestDate.ToString("MMM dd, yyyy")</td>
                            <td>@request.Book.Title</td>
                            <td>@request.Book.Author</td>
                            <td>
                                @if (request.Status == Library_Management_System.Models.RequestStatus.Pending)
                                {
                                    <span class="badge bg-warning">Pending Approval</span>
                                }
                                else if (request.Status == Library_Management_System.Models.RequestStatus.Approved)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (request.Status == Library_Management_System.Models.RequestStatus.Rejected)
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                                else if (request.Status == Library_Management_System.Models.RequestStatus.Returned)
                                {
                                    <span class="badge bg-info">Returned</span>
                                }
                            </td>
                            <td>
                                @if (request.DueDate.HasValue)
                                {
                                    <span>@request.DueDate.Value.ToString("MMM dd, yyyy")</span>
                                    @if (request.DueDate.Value < DateTime.UtcNow && request.Status == Library_Management_System.Models.RequestStatus.Approved)
                                    {
                                        <span class="badge bg-danger ms-2">Overdue</span>
                                    }
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>
                                @if (request.ReturnDate.HasValue)
                                {
                                    @request.ReturnDate.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No requests yet</h4>
            <p>You haven't requested any books yet. <a asp-controller="Books" asp-action="Index">Browse our collection</a> to get started!</p>
        </div>
    }
</div>